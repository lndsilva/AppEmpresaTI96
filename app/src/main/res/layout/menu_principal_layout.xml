<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPrincipal_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mToolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"
            app:title="Menu Principal" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAddProfile"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginRight="5dp"
                android:background="#FFB300"
                android:src="@drawable/ic_baseline_group" />

            <ImageButton
                android:id="@+id/btnListar"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="#5E35B1"
                android:src="@drawable/ic_baseline_place_" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginRight="5dp"
                android:background="#7CB342"
                android:src="@drawable/ic_baseline_subway" />

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="#039BE5"
                android:src="@drawable/ic_baseline_point_of_sale" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginRight="5dp"
                android:background="#3949AB"
                android:src="@drawable/ic_baseline_local_taxi" />

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="#D81B60"
                android:src="@drawable/ic_baseline_directions_bike" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>